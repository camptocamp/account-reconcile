<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="journal_s3_view_form" model="ir.ui.view">
        <field name="name">account.journal.view</field>
        <field name="model">account.journal</field>
        <field name="inherit_id" ref="account_move_base_import.journal_importer_view_form"/>
        <field name="arch" type="xml">
            <field name="used_for_completion" position="after">
                <field name="s3_import" attrs="{'invisible': [('used_for_import', '=', False)]}"/>
            </field>
            <notebook position="inside">
                <page string="S3 related infos" attrs="{'invisible': [('s3_import', '=', False)]}">
                    <group>
                        <field name="s3_access_key" readonly="1"/>
                        <field name="s3_secret_access_key" password="True" readonly="1"/>
                        <field name="s3_bucket_name" readonly="1"/>
                    </group>
                    <group>
                        <field name="s3_input_folder" readonly="1"/>
                        <field name="s3_archive_folder" readonly="1"/>
                        <field name="s3_failed_folder" readonly="1"/>
                    </group>
                </page>
            </notebook>
        </field>
    </record>
</odoo>
