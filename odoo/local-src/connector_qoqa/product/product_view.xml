<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="product_normal_form_view" model="ir.ui.view">
    <field name="name">product.product.form</field>
    <field name="model">product.product</field>
    <field name="inherit_id" ref="connector_base_product.product_normal_form_view"/>
    <field name="arch" type="xml">
      <page name="connector" position="attributes">
        <attribute name="invisible">0</attribute>
      </page>
      <page name="connector" position="inside">
        <group string="QBindings">
          <field name="qoqa_bind_ids" nolabel="1"/>
        </group>
      </page>
    </field>
  </record>

  <record id="view_qoqa_product_form" model="ir.ui.view">
    <field name="name">qoqa.product.product.form</field>
    <field name="model">qoqa.product.product</field>
    <field name="arch" type="xml">
      <form string="QProduct" version="7.0">
        <group>
          <field name="backend_id"/>
          <field name="qoqa_id"/>
          <field name="created_at" readonly="1"/>
          <field name="updated_at" readonly="1"/>
          <button name="import_from_backend" string="Get image from BO"
            type="object"
            class=""/>
        </group>
      </form>
    </field>
  </record>

  <record id="view_qoqa_product_tree" model="ir.ui.view">
    <field name="name">qoqa.product.product.tree</field>
    <field name="model">qoqa.product.product</field>
    <field name="arch" type="xml">
      <tree string="QProduct" version="7.0">
        <field name="backend_id"/>
        <field name="qoqa_id"/>
      </tree>
    </field>
  </record>

</odoo>
