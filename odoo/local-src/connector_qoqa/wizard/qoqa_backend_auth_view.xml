<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="view_qoqa_backend_auth_form" model="ir.ui.view">
    <field name="name">qoqa.backend.auth.form</field>
    <field name="model">qoqa.backend.auth</field>
    <field name="arch" type="xml">
      <form string="QoQa Auth">
        <group string="Token Authentication">
          <field name="backend_id" invisible="1"/>
          <field name="login"/>
          <field name="password" password="True"/>
        </group>
        <footer>
          <button name="auth"
            string="Authenticate"
            type="object" class="oe_highlight"/>
          or
          <button string="Cancel" class="oe_link" special="cancel"/>
        </footer>
      </form>
    </field>
  </record>

  <record id="action_qoqa_backend_auth" model="ir.actions.act_window">
    <field name="name">QoQa Auth</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">qoqa.backend.auth</field>
    <field name="view_type">form</field>
    <field name="view_mode">form</field>
    <field name="view_id" ref="view_qoqa_backend_auth_form"/>
    <field name="target">new</field>
  </record>

</odoo>
