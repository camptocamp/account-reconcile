<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- If you need modify this filters please read discussion in the PR
         https://github.com/camptocamp/qoqa_openerp/pull/666 -->
    <data noupdate="1">
        <record id="todo_filter" model="ir.filters">
            <field name="name">ToDo</field>
            <field name="model_id">crm.claim</field>
            <field name="domain">[['create_date', '&lt;=', (context_today() + datetime.timedelta(days=-2)).strftime('%Y-%m-%d')], '|', '|', '|', '|', '|', '|', '|', '|', '|', '|', '|', '|', ['user_id', 'ilike', 'Rim'], ['user_id', 'ilike', 'Fanny'], ['user_id', 'ilike', 'Sandra'], ['user_id', 'ilike', 'Shervin'], ['user_id', 'ilike', 'Stephanie'], ['user_id', 'ilike', 'JC'], ['user_id', 'ilike', 'Michel De Almeida'], ['user_id', 'ilike', 'Solène'], ['user_id', 'ilike', 'Virginie'], ['user_id', 'ilike', 'crm_claim'], ['user_id', 'ilike', 'QoQa'], ['user_id', 'ilike', 'Qsport'], ['user_id', 'ilike', 'Solange'], '|', '|', ['stage_id', 'ilike', 'Nouveau'], ['stage_id', 'ilike', 'En cours'], ['stage_id', 'ilike', 'Réponse reçue'], '|', ['last_message_date', '&lt;=', (context_today() + datetime.timedelta(days=-2)).strftime('%Y-%m-%d')], ['last_message_date', '=', False]]</field>
            <field name="user_id" eval="False"/>
            <field name="context">{'group_by': ['user_id', 'stage_id']}</field>
            <field name="action_id" ref="crm_claim.crm_claim_category_claim0"/>
        </record>

        <record id="not_treated_since_48h_filter" model="ir.filters">
            <field name="name">Non traité depuis 48h</field>
            <field name="model_id">crm.claim</field>
            <field name="domain">[['create_date', '&lt;=', (context_today() + datetime.timedelta(days=-2)).strftime('%Y-%m-%d')], ['user_id.groups_id', '=', 65], '|', '|', ['stage_id', 'ilike', 'Nouveau'], ['stage_id', 'ilike', 'En cours'], ['stage_id', 'ilike', 'Réponse reçue'], '|', ['last_message_date', '&lt;=', (context_today() + datetime.timedelta(days=-2)).strftime('%Y-%m-%d')], ['last_message_date', '=', False]]</field>
            <field name="user_id" eval="False"/>
            <field name="context">{'group_by': ['user_id', 'stage_id']}</field>
            <field name="action_id" ref="crm_claim.crm_claim_category_claim0"/>
        </record>
    </data>
</odoo>
