<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="1">
        <record model="crm.claim.stage" id="stage_response_received">
            <field name="name">Response Received</field>
            <field name="state">open</field>
            <field name="sequence">26</field>
            <field name="case_default" eval="True"/>
            <field name="claim_common" eval="True"/>
        </record>
    </data>

    <data>
        <record id="reopen_claim" model="ir.actions.server">
            <field name="name">Re-open Claim</field>
            <field name="state">code</field>
            <field name="model_id" ref="crm_claim.model_crm_claim"/>
            <field name="condition">object.stage_id.state != 'draft'</field>
            <field name="sequence">6</field>
            <field name="code">
stage = object.env.ref('crm_claim_mail.stage_response_received')
object.write({'stage_id': stage.id})
            </field>
        </record>
    </data>
</openerp>
