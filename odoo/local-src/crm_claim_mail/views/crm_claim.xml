<?xml version="1.0"?>
<openerp>
  <data>
    <record id="crm_case_claims_tree_view" model="ir.ui.view">
      <field name="name">CRM - Claims Tree</field>
      <field name="model">crm.claim</field>
      <field name="inherit_id" ref="crm_claim.crm_case_claims_tree_view"/>
      <field name="arch" type="xml">
        <tree position="attributes">
          <attribute name="colors">grey:stage_state in ['done', 'cancel'];red:is_gt_48h</attribute>
        </tree>
        <field name="action_next" position="after">
          <field name="stage_state" invisible="True"/>
          <field name="is_gt_48h" invisible="True"/>
        </field>
      </field>
    </record>
  </data>
</openerp>
