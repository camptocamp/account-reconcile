<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="0">        
        <record id="view_move_picking_form" model="ir.ui.view">
            <field name="name">stock.move.form</field>
            <field name="model">stock.move</field>
            <field name="inherit_id" ref="stock.view_move_picking_form"/>
            <field name="arch" type="xml">
                <group string="Traceability" position="inside">
                    <field attrs="{'invisible': [('tracking_url','==',False)]}" name="tracking_url" widget="url"/>
                </group>
            </field>
        </record>
        
        <record id="view_move_picking_tree" model="ir.ui.view">
            <field name="name">stock.move.tree</field>
            <field name="model">stock.move</field>
            <field name="inherit_id" ref="stock.view_move_picking_tree"/>
            <field name="arch" type="xml">
                <field name="tracking_id" position="after">
                    <field name="tracking_url" invisible="1"/>
                    <button name="open_tracking_url" string="View tracking details" type="object"
                        attrs="{'invisible': [('tracking_url','==',False)]}"
                        icon="terp-stock_zoom"/>
                </field>
            </field>
        </record>
    </data>
</openerp>
