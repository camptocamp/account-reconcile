<odoo>

    <record id="mail_template_crm_claim_change_user" model="mail.template">
        <field name="name">Crm claim change user</field>
        <field name="model_id" ref="crm_claim.model_crm_claim"/>
        <field name="email_to">${object.user_id.partner_id.email}</field>
        <field name="subject">New CRM claim assigned</field>
        <field name="lang">${object.user_id.partner_id.lang}</field>
        <field name="body_html"><![CDATA[
            	<p>
                    A new CRM claim (${object.code or ''}) has been assigned to you ${object.user_id.name or ''},
                </p>
                <p>
                    Access directly to this document in OpenERP
                    <a href="${ctx["base_url"]}/web#id=${object.id}&view_type=form&model=crm.claim&view_type=form">${ctx["base_url"]}/web#id=${object.id}&view_type=form&model=crm.claim&view_type=form</a>
                </p>
            ]]>
        </field>
    </record>

</odoo>
