<?xml version="1.0"?>
<odoo>

    <record id="view_crm_team_form_qoqa_claim" model="ir.ui.view">
        <field name="name">crm.team.form.qoqa_claim</field>
        <field name="model">crm.team</field>
        <field name="inherit_id" ref="sales_team.crm_team_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='active']/.." position="inside">
                <field name="notify"/>
            </xpath>
            <xpath expr="//field[@name='active']" position="replace"/>
            <xpath expr="//div[@class='oe_title']" position="before">
                <div class="oe_button_box" name="button_box">
                    <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                        <field name="active" widget="boolean_button" options="{&quot;terminology&quot;: &quot;archive&quot;}"/>
                    </button>
                </div>
            </xpath>
        </field>
    </record>

    <record id="view_crm_team_search_qoqa_claim" model="ir.ui.view">
        <field name="name">crm.team.search.qoqa_claim</field>
        <field name="model">crm.team</field>
        <field name="inherit_id" ref="sales_team.crm_team_salesteams_search"/>
        <field name="arch" type="xml">
            <field name="code" position="after">
                <filter string="Archived" name="active" domain="[('active', '=', False),]"/>
            </field>
        </field>
    </record>
</odoo>
