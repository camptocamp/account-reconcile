<?xml version="1.0"?>
<openerp>

    <record id="stock.view_quant_package_form" model="ir.ui.view">
        <field name="groups_id" eval="[(4, ref('stock.group_stock_user'))]"/>
    </record>

    <record id="view_stock_pack_operation_form_inherit" model="ir.ui.view">
        <field name="name">stock.pack.operation.form</field>
        <field name="model">stock.pack.operation</field>
        <field name="sequence">99</field>
        <field name="inherit_id" ref="stock.view_pack_operation_details_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='package_id']" position="replace"/>
            <xpath expr="//field[@name='result_package_id']" position="replace"/>
            <xpath expr="//group[@groups='stock.group_tracking_lot']" position="inside">
                <group col="3">
                    <field name="package_id" attrs="{'required': [('product_id', '=', False)]}" domain="[('location_id', '=', location_id)]" context="{'location_id': location_id}" class="oe_inline" />
                    <button name="unpack_package" string="Unpack" type="object" icon="fa-pencil" context="{'package': 'source',}" attrs="{'invisible': [('package_id', '=', False)]}"/>
                </group>
                <group col="3">
                    <field name="result_package_id" domain="[('location_id', '=', location_dest_id)]" context="{'location_id': location_dest_id}" />
                    <button name="unpack_package" string="Unpack" type="object" icon="fa-pencil" context="{'package': 'destination',}" attrs="{'invisible': [('result_package_id', '=', False)]}" />
                </group>
            </xpath>
        </field>
    </record>

</openerp>
