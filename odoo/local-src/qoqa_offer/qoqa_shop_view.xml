<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="view_qoqa_shop_form" model="ir.ui.view">
    <field name="name">qoqa.shop</field>
    <field name="model">qoqa.shop</field>
    <field name="arch" type="xml">
      <form string="QoQa Shop" create="false" delete="false">
        <label for="name" class="oe_edit_only"/>
        <h1><field name="name"/></h1>
        <group name="shop">
          <group>
            <field name="company_id" widget="selection" groups="base.group_multi_company"/>
            <field name="analytic_account_id"/>
          </group>
        </group>
      </form>
    </field>
  </record>

  <record id="view_qoqa_shop_tree" model="ir.ui.view">
    <field name="name">qoqa.shop</field>
    <field name="model">qoqa.shop</field>
    <field name="arch" type="xml">
      <tree string="QoQa Shop" create="false" delete="false">
        <field name="name"/>
      </tree>
    </field>
  </record>

  <record id="action_qoqa_shop" model="ir.actions.act_window">
    <field name="name">QoQa Shops</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">qoqa.shop</field>
    <field name="view_type">form</field>
    <field name="view_mode">tree,form</field>
    <field name="view_id" ref="view_qoqa_shop_tree"/>
  </record>

  <menuitem
    id="menu_qoqa_offer"
    name="Shops"
    parent="menu_qoqa_offer_config"
    sequence="10" action="action_qoqa_shop"/>

</odoo>
