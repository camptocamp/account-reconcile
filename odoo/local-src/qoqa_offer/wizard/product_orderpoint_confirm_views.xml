<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_orderpoint_confirm_form_view" model="ir.ui.view">
        <field name="name">product.orderpoint.confirm.form</field>
        <field name="model">product.orderpoint.confirm</field>
        <field name="arch" type="xml">
            <form string="Product Orderpoint Confirm">
                <separator string="Generate purchases from the orderpoints" colspan="4" />
                <footer>
                  <button name="action_confirm" string="Confirm"
                    type="object" class="btn-primary"/>
                    <button special="cancel" string="Cancel" class="btn-default"/>
                </footer>
            </form>
        </field>
    </record>

    <act_window name="Compute Stock Minimum Rules"
                res_model="product.orderpoint.confirm"
                src_model="product.product"
                view_mode="form"
                target="new"
                key2="client_action_multi"
                id="act_product_orderpoint_confirm_product"/>

    <act_window name="Compute Stock Minimum Rules"
                res_model="product.orderpoint.confirm"
                src_model="product.template"
                view_mode="form"
                target="new"
                key2="client_action_multi"
                id="act_product_orderpoint_confirm_template"/>

</odoo>
