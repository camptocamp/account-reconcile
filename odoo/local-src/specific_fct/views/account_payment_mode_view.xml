<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="account_payment_mode_form" model="ir.ui.view">
        <field name="name">account_payment_mode_form</field>
        <field name="model">account.payment.mode</field>
        <field name="inherit_id" ref="account_payment_mode.account_payment_mode_form"/>
        <field name="arch" type="xml">
            <field name="payment_type" position="after">
                <field name="refund_max_days"/>
                <field name="refund_min_date"/>
            </field>
        </field>
    </record>

    <record id="hidden_menu_group" model="res.groups">
        <field name="name">hidden menus</field>
        <field name="category_id" ref="base.module_category_accounting_and_finance"/>
    </record>

    <menuitem id="account_reports.menu_action_followups" groups="hidden_menu_group"/>
</odoo>
