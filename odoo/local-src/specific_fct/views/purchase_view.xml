<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="purchase_order_form" model="ir.ui.view">
        <field name="name">purchase.order.form</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <button name="print_quotation" class="oe_highlight" position="replace"/>
            <button name="print_quotation" states="sent" position="replace">
                <button name="print_quotation" string="Print" type="object" states="" groups="base.group_user"/>
            </button>
            <field name="date_planned" position="attributes">
                <attribute name="required">1</attribute>
            </field>
            <field name="incoterm_id" position="after">
                <field name="validator"/>
            </field>
            <xpath expr="//field[@name='order_line']/tree" position="attributes">
                <attribute name="editable">top</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree//field[@name='product_id']" position="before">
                <field name="sequence" widget="handle"/>
            </xpath>

            <xpath expr="//group[contains(@class, 'oe_subtotal_footer') and contains(@class, 'oe_right')]" position="after">
                <group name="quantity_total" class="oe_subtotal_footer oe_right mr16">
                    <div class="oe_inline">
                        <label for="quantity_total"/>
                    </div>
                    <field name="quantity_total" nolabel="1" />
                </group>
            </xpath>
        </field>
    </record>

    <record id="purchase_order_form_analytic" model="ir.ui.view">
      <field name="name">purchase.order.form</field>
      <field name="model">purchase.order</field>
      <field name="inherit_id" ref="purchase_analytic_global.purchase_order_form"/>
      <field name="arch" type="xml">
        <field name="account_analytic_id" position="attributes">
          <attribute name="required">1</attribute>
        </field>
      </field>
    </record>

    <record id="purchase.purchase_rfq" model="ir.actions.act_window">
        <field name="domain">[('state','in',('draft','sent','confirmed','cancel'))]</field>
    </record>

    <record id="purchase.purchase_form_action" model="ir.actions.act_window">
        <field name="domain">[('state','not in',('draft','sent','confirmed','cancel'))]</field>
    </record>

    <record id="purchase_order_form_mgmt" model="ir.ui.view">
        <field name="name">purchase.order.form</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase_order_variant_mgmt.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page/div[@name='button_box']" position="attributes">
                <attribute name="style">margin: 0;</attribute>
            </xpath>
        </field>
    </record>
</odoo>
