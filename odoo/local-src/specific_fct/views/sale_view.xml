<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form" model="ir.ui.view">
        <field name="name">sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <button name="action_cancel" position="after">
                <button name="action_force_cancel"
                        states="done" string="Cancel Order"
                        type="object"
                        groups="base.group_user"/>
            </button>
            <button name="print_quotation" class="btn-primary" position="replace"/>
            <button name="print_quotation" states="sent,sale" position="replace">
                <button name="print_quotation" string="Print" type="object" states="" groups="base.group_user"/>
            </button>
        </field>
    </record>
</odoo>
