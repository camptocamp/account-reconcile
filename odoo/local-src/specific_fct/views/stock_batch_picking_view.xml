<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="stock_batch_picking_form">
        <field name="name">stock.batch.picking.dispatch.form</field>
        <field name="model">stock.batch.picking</field>
        <field name="inherit_id" ref="delivery_carrier_label_batch.stock_batch_picking_form"/>
        <field name="arch" type="xml">
            <button name="action_cancel" position="attributes">
                <attribute name="invisible">1</attribute>
            </button>
            <page name="carrier" position="replace">
                <page name="carrier" string="Carrier Info">
                    <separator string="Delivery"/>
                    <group>
                        <field name="carrier_id" readonly="1"/>
                    </group>
                    <separator string="Options"/>
                    <field name="option_ids" nolabel="1" readonly="1"/>
                    <label string="To modify the carrier, use the 'Apply a carrier and its options' action."/>
                </page>
            </page>
        </field>
    </record>
</odoo>
