<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="vpicktree" model="ir.ui.view">
    <field name="name">stock.picking.tree</field>
    <field name="model">stock.picking</field>
    <field name="inherit_id" ref="stock.vpicktree"/>
    <field name="arch" type="xml">
      <field name="name" position="after">
        <field name="number_of_products" invisible="1"/>
      </field>
    </field>
  </record>

  <record id="view_picking_form" model="ir.ui.view">
    <field name="name">stock.picking.form</field>
    <field name="model">stock.picking</field>
    <field name="inherit_id" ref="stock.view_picking_form"/>
    <field name="arch" type="xml">
      <field name="partner_id" position="after">
        <field name="lang"/>
      </field>
      <button name="force_assign" position="attributes">
        <attribute name="groups">specific_fct.group_admin_user</attribute>
      </button>
    </field>
  </record>
  <record id="view_move_tree" model="ir.ui.view">
    <field name="name">stock.move.tree</field>
    <field name="model">stock.move</field>
    <field name="inherit_id" ref="stock.view_move_tree"/>
    <field name="arch" type="xml">
      <button name="%(stock.move_scrap)d" position="attributes">
        <attribute name="states">draft,waiting,confirmed,assigned,done</attribute>
      </button>
    </field>
  </record>
  <record id="view_move_picking_tree" model="ir.ui.view">
    <field name="name">stock.move.tree</field>
    <field name="model">stock.move</field>
    <field name="inherit_id" ref="stock.view_move_picking_tree"/>
      <field name="arch" type="xml">
        <button name="%(stock.move_scrap)d" position="attributes">
          <attribute name="states">draft,waiting,confirmed,assigned,done</attribute>
        </button>
      </field>
    </record>
    <record id="view_move_form" model="ir.ui.view">
      <field name="name">stock.move.form</field>
      <field name="model">stock.move</field>
      <field name="inherit_id" ref="stock.view_move_form"/>
      <field name="arch" type="xml">
        <button name="%(stock.move_scrap)d" position="attributes">
          <attribute name="states">draft,waiting,confirmed,assigned,done</attribute>
        </button>
      </field>
    </record>
    <record id="view_move_picking_form" model="ir.ui.view">
      <field name="name">stock.move.form</field>
      <field name="model">stock.move</field>
      <field name="inherit_id" ref="stock.view_move_picking_form"/>
      <field name="arch" type="xml">
        <button name="%(stock.move_scrap)d" position="attributes">
          <attribute name="states">draft,waiting,confirmed,assigned,done</attribute>
        </button>
      </field>
    </record>
    <record id="view_move_tree_receipt_picking" model="ir.ui.view">
      <field name="name">stock.move.tree2</field>
      <field name="model">stock.move</field>
      <field name="inherit_id" ref="stock.view_move_tree_receipt_picking"/>
      <field name="arch" type="xml">
        <button name="%(stock.move_scrap)d" position="attributes">
          <attribute name="states">draft,waiting,confirmed,assigned,done</attribute>
        </button>
      </field>
    </record>
    <record id="view_picking_internal_search" model="ir.ui.view">
      <field name="name">stock.picking.internal.search</field>
      <field name="model">stock.picking</field>
      <field name="inherit_id" ref="stock.view_picking_internal_search"/>
      <field name="arch" type="xml">
        <field name="group_id" position="after">
          <field name="number_of_products"/>
        </field>
        <field name="partner_id" position="after">
          <field name="lang"/>
        </field>
        <group position="inside">
          <filter string="Language" domain="[]" context="{'group_by': 'lang'}"/>
        </group>
      </field>
    </record>

    <record id="view_picking_withcarrier_out_form_shipping" model="ir.ui.view">
      <field name="name">delivery.stock.picking_withcarrier.form.view.shipping</field>
      <field name="model">stock.picking</field>
      <field name="inherit_id" ref="delivery.view_picking_withcarrier_out_form_shipping"/>
      <field name="arch" type="xml">
        <field name="carrier_id" position="attributes">
          <attribute name="attrs">{'readonly': [('state', '=', 'done')]}</attribute>
        </field>
      </field>
    </record>

    <record id="view_picking_withcarrier_out_form" model="ir.ui.view">
      <field name="model">stock.picking</field>
      <field name="inherit_id" ref="base_delivery_carrier_label.view_picking_withcarrier_out_form"/>
      <field name="arch" type="xml">
        <button name="action_generate_carrier_label" position="attributes">
          <attribute name="states"></attribute>
        </button>
      </field>
    </record>

    <record model="ir.actions.server" id="action_stock_move_unreserve_all">
      <field name="name">Unreserve All</field>
      <field name="model_id" ref="stock.model_stock_move"/>
      <field name="code">
        if context.get('active_model') == 'stock.move' and context.get('active_ids'):
            batches = self.pool['stock.move'].do_unreserve(cr, uid, context['active_ids'], context=context)
      </field>
    </record>

    <record model="ir.values" id="ir_stock_move_unreserve_all">
      <field name="model_id" ref="stock.model_stock_move" />
        <field name="name">Unreserve All</field>
        <field name="key2">client_action_multi</field>
        <field eval="'ir.actions.server,%d'%action_stock_move_unreserve_all" name="value"/>
        <field name="key">action</field>
        <field name="model">stock.move</field>
    </record>
</odoo>
