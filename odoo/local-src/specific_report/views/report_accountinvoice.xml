<odoo>

<template id="report_invoice_document" inherit_id="account.report_invoice_document">
  <xpath expr="//p[@t-field='o.name']" position="replace">
    <t t-if="o.refund_description_id">
      <p t-field="o.refund_description_id.name"/>
    </t>
    <t t-if="not o.refund_description_id">
      <p t-field="o.name"/>
    </t>
  </xpath>
</template>

<template id="report_invoice_payment_mode"
    inherit_id="account_payment_partner.report_invoice_payment_mode">

  <xpath expr="//p[@t-if='o.partner_bank_id']" position="replace">

    <t t-if="o.partner_bank_id">
      <div class="row mt32">
        <div class="col-xs-3"><strong>Bank:</strong></div>
        <div class="col-xs-9"><span t-field="o.partner_bank_id.bank_name"/></div>
      </div>

      <div class="row">
        <div class="col-xs-3"><strong>Bank Account:</strong></div>
        <div class="col-xs-9"><span t-field="o.partner_bank_id.acc_number"/></div>
      </div>

      <div class="row">
        <div class="col-xs-3"><strong>BIC:</strong></div>
        <div class="col-xs-9"><span t-field="o.partner_bank_id.bank_bic"/></div>
      </div>
    </t>

    <t t-if="o.company_id.vat">
      <div class="row">
        <div class="col-xs-3"><strong>VAT:</strong></div>
        <div class="col-xs-9"><span t-field="o.company_id.vat"/></div>
      </div>
    </t>

  </xpath>

</template>

</odoo>
