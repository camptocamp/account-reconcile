<odoo>
<!-- replace default label by our own -->
<template id="delivery_carrier_label_default.report_default_label">
  <t t-call="report.html_container">
    <t t-foreach="docs" t-as="o">
      <div class="page">
        <!-- create a background so we ensure rotated item is not outside printable area -->
        <div style="width: 100%; height: 270px; position: absolute; top: 0; left: 0;">
        </div>
        <t t-if="o.sale_id.qoqa_shop_id">
          <div class="logo_position">
            <div class="logo" style="-webkit-transform:rotate(270deg);position: absolute; top: 70px; left: -2mm">
              <t t-debug="pdb"/>
              <img t-attf-src="/specific_report/static/src/img/#{ o.sale_id.qoqa_shop_id.name }_label_logo.png" style="width:24mm"/>
            </div>
          </div>
        </t>
        <div class="address" style="position: absolute; top: 45px; left: 25mm">
          <div class="code" style="margin-left: 1px; font-size: 50%">
            <t t-if="o.offer_id.name and o.sale_id.name">
              <span t-field="o.offer_id.name"/>/<span t-field="o.sale_id.name"/>
            </t>
            <t t-if="not (o.offer_id.name and o.sale_id.name)">
              <span t-field="o.name"/>/<span t-field="o.origin"/>
            </t>
          </div>
          <div class="recipient" style="border-collapse: collapse; font-size: 60%">
            <div class="row">
              <div class="col-xs-5 col-xs-offset-7">
                <t t-if="not o.partner_id.parent_id.qoqa_bind_ids">
                  <address t-field="o.partner_id"
                    style="left: 25mm"
                    t-field-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": true}' />
                </t>
                <t t-if="o.partner_id.parent_id.qoqa_bind_ids">
                  <span t-field="o.partner_id.name"/>
                  <address t-field="o.partner_id"
                    style="left: 25mm"
                    t-field-options='{"widget": "contact", "fields": ["address"], "no_marker": true}' />
                </t>
              </div>
            </div>
          </div>
        </div>
      </div>
    </t>
  </t>
</template>
</odoo>
