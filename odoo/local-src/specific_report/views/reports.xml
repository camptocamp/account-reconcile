<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record model="report.paperformat" id="delivery_carrier_label_default.paperformat_a7_label">
    <field name="name">Label A7 format</field>
    <field name="format">A7</field>
    <field name="orientation">Landscape</field>
    <field name="margin_top">0.01</field>
    <field name="margin_bottom">0.01</field>
    <field name="margin_left">7</field>
  </record>

  <record model="ir.actions.report.xml" id="stock.action_report_delivery">
    <field name="groups_id"
           eval="[(6, 0, [ref('specific_fct.hidden_menu_group')])]"/>
  </record>

  <record model="ir.ui.menu" id="account.menu_finance_legal_statement">
    <field name="groups_id"
           eval="[(6, 0, [ref('specific_fct.hidden_menu_group')])]"/>
  </record>

  <record id="general_ledger_wizard_no_pdf" model="ir.ui.view">
    <field name="name">General Ledger</field>
    <field name="model">general.ledger.report.wizard</field>
    <field name="inherit_id"
           ref="account_financial_report_qweb.general_ledger_wizard"/>
    <field name="arch" type="xml">
      <footer position="replace">
        <footer>
          <div attrs="{'invisible': [('not_only_one_unaffected_earnings_account', '=', True)]}">
            <button name="button_export_xlsx" string="Export XLSX"
                    type="object" default_focus="1" class="oe_highlight"/>
            or
            <button string="Cancel" class="oe_link" special="cancel"/>
          </div>
          <div attrs="{'invisible': [('not_only_one_unaffected_earnings_account', '=', False)]}">
            <button string="Cancel" class="oe_link" special="cancel"/>
          </div>
        </footer>
      </footer>
    </field>
  </record>
</odoo>