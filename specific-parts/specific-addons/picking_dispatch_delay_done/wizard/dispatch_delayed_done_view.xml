<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data noupdate="0">
    <record id="view_picking_dispatch_delayed_done" model="ir.ui.view">
      <field name="name">picking.dispatch.delayed.done.form</field>
      <field name="model">picking.dispatch.delayed.done</field>
      <field name="arch" type="xml">
        <form string="Delayed Done" version="7.0">
          <footer>
            <button name="delayed_done" string="Delayed Done" type="object" class="oe_highlight"/>
            or
            <button string="Cancel" class="oe_link" special="cancel"/>
          </footer>
        </form>
      </field>
    </record>

    <record id="action_picking_dispatch_delayed_done" model="ir.actions.act_window">
      <field name="name">Delayed Done</field>
      <field name="res_model">picking.dispatch.delayed.done</field>
      <field name="view_type">form</field>
      <field name="view_mode">form</field>
      <field name="view_id" ref="view_picking_dispatch_delayed_done"/>
      <field name="target">new</field>
    </record>

    <record id="action_picking_dispatch_delayed_done_values" model="ir.values">
      <field name="model_id" ref="model_picking_dispatch" />
      <field name="name">Delayed Done</field>
      <field name="key2">client_action_multi</field>
      <field name="value" eval="'ir.actions.act_window,' + str(ref('action_picking_dispatch_delayed_done'))"/>
      <field name="key">action</field>
      <field name="model">picking.dispatch</field>
    </record>
  </data>
</openerp>

