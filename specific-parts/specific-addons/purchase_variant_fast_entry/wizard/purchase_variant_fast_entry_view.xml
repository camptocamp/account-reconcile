<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>

    <record id="view_purchase_variant_fast_entry_form" model="ir.ui.view">
      <field name="name">purchase.variant.fast.entry.form</field>
      <field name="model">purchase.variant.fast.entry</field>
      <field name="arch" type="xml">
        <form string="Fast entry of variants" version="7.0">
          <group>
            <field name="product_tmpl_id"/>
            <field name="quantity"/>
          </group>
          <footer>
            <button name="fast_entry"
              string="Fast Entry"
              type="object" class="oe_highlight"/>
            or
            <button string="Cancel" class="oe_link" special="cancel"/>
          </footer>
        </form>
      </field>
    </record>

    <record id="action_purchase_variant_fast_entry" model="ir.actions.act_window">
      <field name="name">Variants Fast Entry</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">purchase.variant.fast.entry</field>
      <field name="view_type">form</field>
      <field name="view_mode">form</field>
      <field name="view_id" ref="view_purchase_variant_fast_entry_form"/>
      <field name="target">new</field>
    </record>

  </data>
</openerp>

