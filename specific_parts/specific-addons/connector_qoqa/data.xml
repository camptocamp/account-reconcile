<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="1">

        <record model="res.users" id="user_connector_ch">
            <field name="name">Connecteur CH</field>
            <field name="login">connector_ch</field>
            <field name="active" eval="False"/>
            <field name="notification_email_send">none</field>
        </record>

        <record model="res.users" id="user_connector_fr">
            <field name="name">Connecteur FR</field>
            <field name="login">connector_fr</field>
            <field name="active" eval="False"/>
            <field name="notification_email_send">none</field>
        </record>

        <record model="qoqa.backend" id="qoqa_backend_config">
            <field name="name">QoQa Services</field>
            <field name="url">http://admin.test02.qoqa.com</field>
            <field name="version">v1</field>
            <field name="default_lang_id" ref="base.lang_en"/>
            <field name="debug" eval="1"/>
        </record>

        <record id="excep_wrong_total_amount" model="sale.exception">
            <field name="name">Total Amount differs from QoQa</field>
            <field name="description">The amount computed in OpenERP doesn't match with the amount in QoQa.</field>
            <field name="sequence">30</field>
            <field name="model">sale.order</field>
            <field name="code">if order.qoqa_bind_ids and abs(order.amount_total - order.qoqa_bind_ids[0].qoqa_amount_total) >= 0.01:
    failed = True</field>
            <field name="active" eval="True"/>
        </record>
    </data>
</openerp>
