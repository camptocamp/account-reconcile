            <field name="default_lang_id" ref="base.lang_en"/>
            <field name="debug" eval="1"/>
        </record>

        <record model="qoqa.promo.type" id="promo_type_customer_service">
            <field name="name">Customer service</field>
            <field name="backend_id" ref="qoqa_backend_config"/>
            <field name="product_id" ref="connector_ecommerce.product_product_discount"/>
            <field name="qoqa_id">1</field>
        </record>

