<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="1">

        <record model="res.users" id="user_connector_ch">
            <field name="name">Connecteur CH</field>
            <field name="login">connector_ch</field>
            <field name="active" eval="False"/>
            <field name="notification_email_send">none</field>
        </record>

