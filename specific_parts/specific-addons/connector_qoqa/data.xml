            <field name="qoqa_id">5</field>
        </record>

        <record model="qoqa.promo.type" id="promo_type_refund_coupon">
            <field name="name">Bon remboursement</field>
            <field name="backend_id" ref="qoqa_backend_config"/>
            <field name="product_id" ref="qoqa_base_data.product_product_refund_coupon"/>
            <field name="qoqa_id"></field>
        </record>

        <record id="excep_wrong_total_amount" model="sale.exception">
            <field name="name">Total Amount differs from QoQa</field>
            <field name="description">The amount computed in OpenERP doesn't match with the amount in QoQa.</field>
            <field name="sequence">30</field>
            <field name="model">sale.order</field>
            <field name="code">if order.qoqa_bind_ids and abs(order.amount_total - order.qoqa_bind_ids[0].qoqa_amount_total) >= 0.01:
    failed = True</field>
            <field name="active" eval="True"/>
        </record>

        <record forcecreate="True" id="ir_cron_qoqa_import_sale_order" model="ir.cron">
            <field name="name">QoQa - Import Sales Orders</field>
            <field eval="False" name="active"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">10</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field eval="False" name="doall"/>
            <field eval="'qoqa.backend'" name="model"/>
            <field eval="'_scheduler_import_sale_order'" name="function"/>
            <field eval="'()'" name="args"/>
        </record>

