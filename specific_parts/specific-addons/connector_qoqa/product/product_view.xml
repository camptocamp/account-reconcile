<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="0">
        <record id="product_normal_form_view" model="ir.ui.view">
            <field name="name">product.product.form</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="connector_ecommerce.product_normal_form_view"/>
            <field name="arch" type="xml">
                <page name="connector" position="attributes">
                    <attribute name="invisible">0</attribute>
                </page>
                <page name="connector" position="inside">
                    <group string="QBindings">
                        <field name="qoqa_bind_ids" nolabel="1"/>
                    </group>
                </page>
                <field name="description" position="after">
                    <separator string="E-Commerce Description" class="oe_edit_only"/>
                    <field name="description_ecommerce"/>
                </field>
            </field>
        </record>

        <record id="view_qoqa_product_form" model="ir.ui.view">
            <field name="name">qoqa.product.product.form</field>
            <field name="model">qoqa.product.product</field>
            <field name="arch" type="xml">
                <form string="QProduct" version="7.0">
                    <group>
                        <field name="backend_id"/>
                        <field name="qoqa_id"/>
                        <field name="created_at" readonly="1"/>
                        <field name="updated_at" readonly="1"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="view_qoqa_product_tree" model="ir.ui.view">
            <field name="name">qoqa.product.product.tree</field>
            <field name="model">qoqa.product.product</field>
            <field name="arch" type="xml">
                <tree string="QProduct" version="7.0">
                    <field name="backend_id"/>
                    <field name="qoqa_id"/>
                </tree>
            </field>
        </record>

        <record id="product_template_form_view" model="ir.ui.view">
            <field name="name">product.template.product.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <separator string="Internal Description" position="before">
                    <separator string="E-Commerce Description"/>
                    <field name="description_ecommerce"/>
                </separator>
            </field>
        </record>

    </data>
</openerp>
