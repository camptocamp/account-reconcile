<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="0">

        <!-- Backend -->
        <record id="view_qoqa_backend_form" model="ir.ui.view">
            <field name="name">qoqa.backend.form</field>
            <field name="model">qoqa.backend</field>
            <field name="arch" type="xml">
                <form string="QoQa Backend" version="7.0" create="0" delete="0">
                    <header groups="connector.group_connector_manager">
                      <button name="synchronize_metadata"
                        type="object"
                        class="oe_highlight"
                        string="Synchronize Metadata"/>
                      <button name="%(action_qoqa_backend_oauth)d"
                        type="action"
                        string="Get Authentication Tokens"/>
                      <!-- <button name="check_connection" -->
                      <!--   type="object" -->
                      <!--   string="Check Connection"/> -->
                    </header>
                    <sheet>
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" class="oe_inline" />
                        </h1>
                        <group name="api_configuration" string="API Configuration" groups="connector.group_connector_manager">
                            <group colspan="4" col="4">
                                <field name="version" colspan="4"/>
                                <field name="url"
                                    placeholder="e.g. http://www.qoqa.ch"
                                    colspan="4"
                                    />
                                <field name="debug" colspan="2"/>
                            </group>
                        </group>
                        <group name="main_configuration" string="Main Configuration">
                            <field name="default_lang_id"/>
                        </group>
                        <notebook>
                            <page name="import" string="Imports">
                                <p class="oe_grey oe_inline">
                                    By clicking on the buttons,
                                    you will initiate the synchronizations
                                    with QoQa.
                                    Note that the import or exports
                                    won't be done directly,
                                    they will create 'Jobs'
                                    executed as soon as possible.
                                </p>
                                <p class="oe_grey oe_inline">
                                    Once imported,
                                    some types of records,
                                    like the products or categories,
                                    need a manual review.
                                    You will find the list
                                    of the new records to review
                                    in the menu 'Connectors > Checkpoint'.
                                </p>
                                <group>
                                    <div>
                                        <label string="Import customers since"
                                            class="oe_inline"/>
                                        <field name="import_res_partner_from_date"
                                            class="oe_inline"
                                            nolabel="1"/>
                                    </div>
                                    <button name="import_res_partner"
                                        type="object"
                                        class="oe_highlight"
                                        string="Import in background"/>
                                </group>
                                <group>
                                    <div>
                                        <label string="Import addresses since"
                                            class="oe_inline"/>
                                        <field name="import_address_from_date"
                                            class="oe_inline"
                                            nolabel="1"/>
                                    </div>
                                    <button name="import_address"
                                        type="object"
                                        class="oe_highlight"
                                        string="Import in background"/>
                                </group>
                                <group>
                                    <div>
                                        <label string="Import sales orders since"
                                            class="oe_inline"/>
                                        <field name="import_sale_order_from_date"
                                            class="oe_inline"
                                            nolabel="1"/>
                                    </div>
                                    <button name="import_sale_order"
                                        type="object"
                                        class="oe_highlight"
                                        string="Import in background"/>
                                </group>
                            </page>
                            <page name="import" string="Initial Imports">
                                <p class="oe_grey oe_inline">
                                    By clicking on the buttons,
                                    you will initiate the synchronizations
                                    with QoQa.
                                    Note that the import or exports
                                    won't be done directly,
                                    they will create 'Jobs'
                                    executed as soon as possible.
                                </p>
                                <p class="oe_grey oe_inline">
                                    Once imported,
                                    some types of records,
                                    like the products or categories,
                                    need a manual review.
                                    You will find the list
                                    of the new records to review
                                    in the menu 'Connectors > Checkpoint'.
                                </p>
                                <group>
                                    <div>
                                        <label string="Import product templates since"
                                            class="oe_inline"/>
                                        <field name="import_product_template_from_date"
                                            class="oe_inline"
                                            nolabel="1"/>
                                    </div>
                                    <button name="import_product_template"
                                        type="object"
                                        class="oe_highlight"
                                        string="Import in background"/>
                                </group>
                                <group>
                                    <div>
                                        <label string="Import product variants since"
                                            class="oe_inline"/>
                                        <field name="import_product_product_from_date"
                                            class="oe_inline"
                                            nolabel="1"/>
                                    </div>
                                    <button name="import_product_product"
                                        type="object"
                                        class="oe_highlight"
                                        string="Import in background"/>
                                </group>
                        </page>
                    </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_qoqa_backend_tree" model="ir.ui.view">
            <field name="name">qoqa.backend.tree</field>
            <field name="model">qoqa.backend</field>
            <field name="arch" type="xml">
                <tree string="QoQa Backend" version="7.0" create="0" delete="0">
                    <field name="name"/>
                    <field name="url"
                        placeholder="e.g. http://www.qoqa.ch"/>
                </tree>
            </field>
        </record>

        <record id="action_qoqa_backend" model="ir.actions.act_window">
            <field name="name">QoQa Backends</field>
            <field name="res_model">qoqa.backend</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="res_id" ref="qoqa_backend_config"/>
        </record>

    </data>
</openerp>
