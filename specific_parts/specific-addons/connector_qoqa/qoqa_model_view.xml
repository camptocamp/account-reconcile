<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="0">

        <!-- Backend -->
        <record id="view_qoqa_backend_form" model="ir.ui.view">
            <field name="name">qoqa.backend.form</field>
            <field name="model">qoqa.backend</field>
            <field name="arch" type="xml">
                <form string="QoQa Backend" version="7.0" create="0" delete="0">
                    <header groups="connector.group_connector_manager">
                      <button name="synchronize_metadata"
                        type="object"
                        class="oe_highlight"
                        string="Synchronize Metadata"/>
                      <button name="%(action_qoqa_backend_oauth)d"
                        type="action"
                        string="Get Authentication Tokens"/>
                      <!-- <button name="check_connection" -->
                      <!--   type="object" -->
                      <!--   string="Check Connection"/> -->
                    </header>
                    <sheet>
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" class="oe_inline" />
                        </h1>
                        <group name="api_configuration" string="API Configuration" groups="connector.group_connector_manager">
                            <group colspan="4" col="4">
                                <field name="version" colspan="4"/>
                                <field name="url"
                                    placeholder="e.g. http://www.qoqa.ch"
                                    colspan="4"
                                    />
                                <field name="debug" colspan="2"/>
                            </group>
                        </group>
                        <group name="main_configuration" string="Main Configuration">
                            <field name="default_lang_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_qoqa_backend_tree" model="ir.ui.view">
            <field name="name">qoqa.backend.tree</field>
            <field name="model">qoqa.backend</field>
            <field name="arch" type="xml">
                <tree string="QoQa Backend" version="7.0" create="0" delete="0">
                    <field name="name"/>
                    <field name="url"
                        placeholder="e.g. http://www.qoqa.ch"/>
                </tree>
            </field>
        </record>

        <record id="action_qoqa_backend" model="ir.actions.act_window">
            <field name="name">QoQa Backends</field>
            <field name="res_model">qoqa.backend</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="res_id" ref="qoqa_backend_config"/>
        </record>

        <!-- shops -->
        <record id="view_qoqa_shop_form" model="ir.ui.view">
            <field name="name">qoqa.shop.form</field>
            <field name="model">qoqa.shop</field>
            <field name="arch" type="xml">
                <form string="QoQa Shop" version="7.0" create="0" delete="0">
                    <header>
                    </header>
                    <sheet>
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                        <group string="Informations">
                            <field name="backend_id" widget="selection"/>
                            <field name="openerp_id"/>
                        </group>
                        <group string="Options">
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_qoqa_shop_tree" model="ir.ui.view">
            <field name="name">qoqa.shop.tree</field>
            <field name="model">qoqa.shop</field>
            <field name="arch" type="xml">
                <tree string="QoQa Shop" version="7.0" create="0" delete="0">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="action_qoqa_shop" model="ir.actions.act_window">
            <field name="name">QoQa Shops</field>
            <field name="res_model">qoqa.shop</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</openerp>
