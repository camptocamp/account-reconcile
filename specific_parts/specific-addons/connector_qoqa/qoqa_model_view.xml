<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="0">

        <!-- Backend -->
        <record id="view_qoqa_backend_form" model="ir.ui.view">
            <field name="name">qoqa.backend.form</field>
            <field name="model">qoqa.backend</field>
            <field name="arch" type="xml">
                <form string="QoQa Backend" version="7.0" create="0" delete="0">
                    <header>
                      <button name="check_connection"
                        type="object"
                        class="oe_highlight"
                        string="Check Connection"/>
                    </header>
                    <sheet>
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" class="oe_inline" />
                        </h1>
                        <group name="qoqa" string="QoQa Configuration">
                            <group colspan="4" col="4">
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_qoqa_backend_tree" model="ir.ui.view">
            <field name="name">qoqa.backend.tree</field>
            <field name="model">qoqa.backend</field>
            <field name="arch" type="xml">
                <tree string="QoQa Backend" version="7.0">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="action_qoqa_backend" model="ir.actions.act_window">
            <field name="name">QoQa Backends</field>
            <field name="res_model">qoqa.backend</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="res_id" ref="qoqa_backend_config"/>
        </record>

        <!-- Stores -->
        <record id="view_qoqa_store_form" model="ir.ui.view">
            <field name="name">qoqa.store.form</field>
            <field name="model">qoqa.store</field>
            <field name="arch" type="xml">
                <form string="QoQa Store" version="7.0">
                    <header>
                    </header>
                    <sheet>
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                        <group>
                            <field name="version" />
                        </group>
                        <group string="Informations">
                            <field name="backend_id" widget="selection"/>
                        </group>
                        <group string="Options">
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_qoqa_store_tree" model="ir.ui.view">
            <field name="name">qoqa.store.tree</field>
            <field name="model">qoqa.store</field>
            <field name="arch" type="xml">
                <tree string="QoQa Store" version="7.0">
                    <field name="name"/>
                    <field name="version"/>
                    <field name="openerp_id"/>
                </tree>
            </field>
        </record>

        <record id="action_qoqa_store" model="ir.actions.act_window">
            <field name="name">QoQa Stores</field>
            <field name="res_model">qoqa.store</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</openerp>
