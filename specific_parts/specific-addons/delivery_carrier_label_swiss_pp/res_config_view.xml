<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>

    <record id="view_swiss_pp_config_settings" model="ir.ui.view">
      <field name="name">postlogistics settings</field>
      <field name="model">swiss_pp.config.settings</field>
      <field name="arch" type="xml">
        <form string="Configure Swiss PP Franking" version="7.0" class="oe_form_configuration">
          <header>
            <button string="Apply" type="object" name="execute" class="oe_highlight"/>
            or
            <button string="Cancel" type="object" name="cancel" class="oe_link"/>
          </header>

          <group groups="base.group_multi_company">
            <div>
              <div>
                <label for="company_id" string="Select Company"/>
                <field name="company_id"
                    widget="selection"
                    on_change="onchange_company_id(company_id, context)"
                    class="oe_inline"/>
              </div>
            </div>
          </group>
          <group>
            <div>
              <div>
                <label for="stamp_image"/>
                <field name="stamp_image" class="oe_inline" widget="image"/>
              </div>
            </div>
          </group>
        </form>
      </field>
    </record>

    <record id="action_swiss_pp_config" model="ir.actions.act_window">
      <field name="name">Configure Swiss PP Franking</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">swiss_pp.config.settings</field>
      <field name="view_mode">form</field>
      <field name="target">inline</field>
    </record>

    <menuitem id="menu_swiss_pp_config" name="Swiss PP Franking" parent="base.menu_config"
        sequence="20" action="action_swiss_pp_config"/>

  </data>
</openerp>
