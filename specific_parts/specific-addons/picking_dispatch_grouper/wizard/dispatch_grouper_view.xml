<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data noupdate="0">

    <record id="view_picking_dispatch_grouper" model="ir.ui.view">
      <field name="name">picking.dispatch.grouper.form</field>
      <field name="model">picking.dispatch.grouper</field>
      <field name="arch" type="xml">
        <form string="Generate Grouped Dispatches" version="7.0">
          <notebook>
            <page string="Options">
              <group string="Limit per Dispatch" col="4">
                <field name="pack_limit"/>
                <field name="pack_limit_apply_threshold"
                  attrs="{'invisible': [('pack_limit', '&lt;', 1)]}"/>
                <p colspan="4" class="oe_grey" attrs="{'invisible': [('pack_limit', '&lt;', 1)]}">
                  The generated dispatches will not contain more packs than the limit.
                  <span attrs="{'invisible': [('pack_limit_apply_threshold', '=', False)]}">
                    The limit is applied excepted for packs with only 1 unit.
                  </span>
                  <span attrs="{'invisible': [('pack_limit_apply_threshold', '=', True)]}">
                    The limit is applied even for packs with only 1 unit.
                  </span>
                </p>
                <p colspan="4" class="oe_grey" attrs="{'invisible': [('pack_limit', '&gt;=', 1)]}">
                  The generated dispatches will contain an unlimited number of packs.
                </p>
              </group>
              <group string="Grouping" col="4">
                <field name="group_by_content" colspan="4" />
                <p colspan="4" class="oe_grey" attrs="{'invisible': [('group_by_content', '=', False)]}">
                  The packs with identical content will be grouped in the same dispatch.
                </p>
                <p colspan="4" class="oe_grey" attrs="{'invisible': [('group_by_content', '=', True)]}">
                  The packs will not be grouped according to their content, the dispatches
                  will contain various packs.
                </p>
                <field name="group_leftovers"
                  attrs="{'invisible': [('group_by_content', '=', False)]}"/>
                <field name="group_leftovers_threshold"
                  attrs="{'invisible': ['|', ('group_leftovers', '=', False), ('group_by_content', '=', False)]}"/>
                <p colspan="4" class="oe_grey" attrs="{'invisible': [('group_by_content', '=', False)]}">
                  Leftovers are dispatches generated with a number of packs below a defined threshold.
                  <span attrs="{'invisible': [('group_leftovers', '=', False)]}">
                    The leftovers will all be grouped in a final dispatch.
                  </span>
                  <span attrs="{'invisible': [('group_leftovers', '=', True)]}">
                    The leftovers will not be grouped.
                  </span>
                  <span attrs="{'invisible': [('group_leftovers', '=', False)]}">
                    Dispatches are considered as leftovers when they contains less that the Threshold
                  </span>
                </p>
              </group>
            </page>
            <page string="Filter Products">
              <group>
                <field colspan="2" name="only_product_ids" nolabel="1" />
              </group>
            </page>
          </notebook>
          <footer>
            <button name="group" string="Generate Dispatches" type="object" class="oe_highlight"/>
            or
            <button string="Cancel" class="oe_link" special="cancel"/>
          </footer>
        </form>
      </field>
    </record>

    <record id="action_picking_dispatch_grouper" model="ir.actions.act_window">
      <field name="name">Generate Grouped Dispatches</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">picking.dispatch.grouper</field>
      <field name="view_type">form</field>
      <field name="view_mode">form</field>
      <field name="view_id" ref="view_picking_dispatch_grouper"/>
      <field name="target">new</field>
    </record>

    <record model="ir.values" id="stock_picking_out_picking_dispatch_grouper">
      <field name="model_id" ref="stock.model_stock_picking_out" />
      <field name="name">Generate Grouped Dispatches</field>
      <field name="key2">client_action_multi</field>
      <field name="value" eval="'ir.actions.act_window,' + str(ref('action_picking_dispatch_grouper'))" />
      <field name="key">action</field>
      <field name="model">stock.picking.out</field>
    </record>

    <record model="ir.values" id="stock_tracking_picking_dispatch_grouper">
      <field name="model_id" ref="stock.model_stock_tracking" />
      <field name="name">Generate Grouped Dispatches</field>
      <field name="key2">client_action_multi</field>
      <field name="value" eval="'ir.actions.act_window,' + str(ref('action_picking_dispatch_grouper'))" />
      <field name="key">action</field>
      <field name="model">stock.tracking</field>
    </record>

    <record model="ir.values" id="stock_move_picking_dispatch_grouper">
      <field name="model_id" ref="stock.model_stock_move" />
      <field name="name">Generate Grouped Dispatches</field>
      <field name="key2">client_action_multi</field>
      <field name="value" eval="'ir.actions.act_window,' + str(ref('action_picking_dispatch_grouper'))" />
      <field name="key">action</field>
      <field name="model">stock.move</field>
    </record>

  </data>
</openerp>
