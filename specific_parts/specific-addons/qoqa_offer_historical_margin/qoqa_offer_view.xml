<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>

    <act_window
       id="act_qoqa_offer_act_open_invoice_lines"
       name="Margin Details"
       domain="[('offer_id','in',active_ids),('invoice_state','in',['open', 'paid']),('invoice_type','in',['out_refund','out_invoice'])]"
       res_model="account.invoice.line"
       src_model="qoqa.offer"
       view_mode="tree,form"
       view_id="product_historical_margin.view_invoice_line_tree_from_product"
       context="{'search_default_product':1,'search_default_year':1}"
       />

        <record id="view_qoqa_offer_form" model="ir.ui.view">
            <field name="name">qoqa.offer.form</field>
            <field name="model">qoqa.offer</field>
            <field name="inherit_id" ref="qoqa_offer.view_qoqa_offer_form"/>
            <field name="arch" type="xml">
              <page string="Internal Description" position="after">
                <page string="Financial informations">
                  <group name="margin" string="Margin">
                    <field name="subtotal_company"/>
                    <field name="subtotal_cost_price_company"/>
                    <field name="margin_absolute"/>
                    <field name="margin_relative"/>
                  </group>
                </page>
              </page>
            </field>
        </record>

  </data>
</openerp>
